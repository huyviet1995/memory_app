<div class = 'sign-in-box'>
  Hello world, my name is Viet Dang 
  <div id = 'main-content'>
    <div id = 'box-header'>

      <div id = 'sign-in-option'>
        SIGN IN 
      </div>
      <div id = 'sign-up-option'>
        SIGN UP
      </div>

    </div>
    <div id = 'box-body'>
        <div id = 'sign-in-view'>
          <%= form_with(url: '/users', method: :post) do |form| %>
            <div class = 'row form-group'>
              <%= form.label :meail, 'Email', class: 'col-sm-3'%>
              <%= form.text_field :email, placeholder: 'example@gmail.com', class: 'col-sm-5'%>
            </div>

            <div class = 'row form-group'>
              <%= form.label :password, 'Password', class: 'col-sm-3'%>
              <%= form.password_field :password, class: 'col-sm-5'%>
            </div>

            <%= form.submit 'LOG IN', class: 'btn btn-primary btn-lg' %>

          <% end %>
        </div>

        <div id = "sign-up-view">
          <%= form_with(url: '/users', method: :post) do |form|%>
            <div class = 'row form-group'>
              <%= form.label :first_name, 'First Name', class: 'col-sm-3'  %>
              <%= form.text_field :first_name, placeholder: 'Viet', class: 'col-sm-5'%>
            </div>

            <div class = 'row form-group'>
              <%= form.label :last_name, 'Last Name:', class: 'col-sm-3'  %>
              <%= form.text_field :last_name, placeholder: 'Dang', class: 'col-sm-5'%>
            </div>

            <div class = 'row form-group'>
              <%= form.label :email, 'Email:', class: 'col-sm-3' %>
              <%= form.text_field :email, placeholder: 'example@gmail.com', class: 'col-sm-5'%>
            </div>

            <div class = 'row form-group'>
              <%= form.label :password, 'Password:', class: 'col-sm-3'%>
              <%= form.text_field :password, placeholder: 'password', class: 'col-sm-5' %>
            </div>

            <div class = 'row form-group'>
              <%= form.label :password_confirmation, 'Retype pwd:', class: 'col-sm-3' %>
              <%= form.text_field :password_confirmation, placeholder: 'confirm password', class: 'col-sm-5'%>
            </div>

            <%= form.submit 'SIGN UP', class: 'btn btn-primary'%>

          <% end %>
        </div>
    </div>
    <div id = 'box-footer'>
      <div id = 'sign-up-view'>
      </div>
    </div>
  </div>
</div>