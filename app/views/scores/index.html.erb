<div class = "main-scores-body">
  <div class = "score-info-section">
    <div class = "score"> SCORE: <%=@score%></div>
    <div class = "level"> LEVEL: <%=@level%></div>
  </div>

  <div class = "graph-section">
    <input type = 'hidden' name = 'final-score' value=<%=@score%>>
    <input type = 'hidden' name = 'score-graph-info' value=<%=@score_percentage.to_json %>>
    <canvas id="myChart"></canvas>
  </div>

  <div class = "comment-section">
    <div class = 'title'>TELL US WHAT YOU THINK?</div>
    <%= form_with(url: '/play', method: :post) do |form| %>
      <div class = 'container'>
        <div class = 'row form-group'>
          <%= form.label :email, 'Email', class: 'col-sm-2'%>
          <%= form.text_field :email, placeholder: 'example@gmail.com', class: 'col-sm-5' %>
        </div>

        <div class = 'row form-group'>
          <%= form.label :comment, 'Comment', class: 'col-sm-2'%>
          <%= form.text_area :comment, placeholder:'Cool!!!' ,class: 'col-sm-5' %>
        </div>
      </div>

      <div class = 'buttons'>
        <%= form.submit 'SUBMIT', class: 'btn btn-primary'%>
      </div>
    <% end %>
  </div>

</div>