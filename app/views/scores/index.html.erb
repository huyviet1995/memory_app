<div class = "main-scores-body">
  <div class = "score-info-section">
    <div class = "score"> SCORE: <%=@score%></div>
    <div class = "level"> LEVEL: <%=@level%></div>
  </div>

  <div class = "graph-section">
    <input type = 'hidden' name = 'final-score' value=<%=@score%>>
    <input type = 'hidden' name = 'score-graph-info' value=<%=@score_percentage.to_json %>>
    <canvas id="myChart"></canvas>
  </div>

  <div class = "comment-section">
    <div class = 'title'>TELL US WHAT YOU THINK?</div>
    <%= form_with(url: '/play', method: :post) do %>
      <div class = 'container'>
        <div class = 'row form-group'>
          <%= label_tag :email, 'Email', class: 'col-sm-2'%>
          <%= text_field_tag :email, '', placeholder: 'example@gmail.com', class: 'col-sm-5' %>
        </div>

        <div class = 'row form-group'>
          <%= label_tag :comment, 'Comment', class: 'col-sm-2'%>
          <%= text_area_tag :comment, '', placeholder:'This game is so cool!!!' ,class: 'col-sm-5' %>
        </div>
      </div>
    <% end %>
  </div>

  <div class = "buttons-section">
    <%= link_to 'MAIN MENU', '/', class: 'btn btn-primary' %>
  </div>

</div>